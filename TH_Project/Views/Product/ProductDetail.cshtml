@{
    ViewBag.Title = "Chi Tiết Sản Phẩm";
    var product = ViewBag.Product; 
}
@model TH_Project.ViewModel.DetailProductVM
<style>
    .category_section {
        display: flex;
        flex-direction: row; 
        padding: 20px;
    }

    .cate_pick {
        width: 30%; 
    }

    .category-list {
        list-style-type: none; 
        padding: 0; 
    }

    .category-item {
        margin-bottom: 10px; 
    }
</style>







<section class="category_section layout_padding" style="display: flex;">
    <div class="cate_pick">
        <h3>Chủ đề sách</h3>
        <ul class="category-list">
            @foreach (var item in Model.cHUDEs)
            {
                <li class="category-item">
                    @Html.ActionLink(item.TenChuDe, "Index", "Product", new { idCD = item.MaCD }, null)

                </li>
            }
        </ul>

        <h3>Nhà xuất bản</h3>
        <ul class="category-list">
            @foreach (var item in Model.nxb)
            {
                <li class="category-item">
                    @Html.ActionLink(item.TenNXB, "Index", "Product", new { idNXB = item.MaNXB }, null)

                </li>
            }
        </ul>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                @*<img src=@Model.SACH.Anhbia alt="@Model.SACH.Tensach" class="img-fluid" />*@
                <img src="~/Content/images/@Model.SACH.Anhbia" alt="@Model.SACH.Tensach" class="img-fluid" />
            </div>
            <div class="col-md-6">
                <h2>@Model.SACH.Tensach</h2>
                <h4>Giá: @Model.SACH.Giaban</h4>
                <p><strong>Mô tả:</strong> @Model.SACH.Mota</p>

                <button class="btn btn-primary mt-3" id="addToCart">Thêm vào giỏ hàng</button>
            </div>
        </div>
    </div>


</section>

