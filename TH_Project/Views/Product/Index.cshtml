@{
    ViewBag.Title = "Index";
}
@model TH_Project.ViewModel.ProductVM





<section class="category_section layout_padding" style="display: flex;">

    <div class="container" style="text-align: center;">
         <img src="~/Content/images/banner-hoi-sach.jpg" alt="aaa" style="width: 100%; height: 10%; padding-bottom: 15px">
        <h3 style="color: darkred; font-family:'Times New Roman', Times, serif">SÁCH MỚI</h3>
        <div class="row">
            @foreach (var item in Model.SACHes)
            {
                <div class="col-md-4 mb-4">
                    <a href="@Url.Action("ProductDetail", "Product", new { id = item.Masach })" class="item card text-center" style="text-decoration: none;">
                        <img src="~/Content/images/@item.Anhbia" class="card-img-top" alt="@item.Tensach" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Tensach</h5>
                            <p class="card-text">@item.Giaban</p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

</section>

