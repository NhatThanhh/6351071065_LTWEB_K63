
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model TH_Project.ViewModel.ProductVM
<style>
    .category_section {
        display: flex;
        flex-direction: row;
        padding: 40px;
        color: black;
    }

    .cate_pick {
        width: 30%;
    }

    .category-list {
        list-style-type: none;
        padding: 0;
    }

    .category-item {
        margin-bottom: 10px;
    }

    .col-md-4 img {
        width: 100%;
        height: auto;
    }
</style>




<section class="category_section layout_padding" style="display: flex;">
    <div class="cate_pick">
        <h3>Chủ đề sách</h3>
        <ul class="category-list">
            @foreach (var item in Model.cHUDEs)
            {
                <li class="category-item">
                    @Html.ActionLink(item.TenChuDe, "Index", "Product", new { idCD = item.MaCD }, null)

                </li>
            }
        </ul>

        <h3>Nhà xuất bản</h3>
        <ul class="category-list">
            @foreach (var item in Model.nxb)
            {
                <li class="category-item">
                    @Html.ActionLink(item.TenNXB, "Index", "Product", new { idNXB = item.MaNXB }, null)

                </li>
            }
        </ul>
    </div>

    <div class="container" style="text-align: center;">
        <img src="~/Content/images/banner-hoi-sach.jpg" alt="aaa" style="width: 100%; height: auto;">
        <table align="center">
            <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true){
                    <tr style="height:40px">
                        <td>Họ tên khách hàng:</td>
                        <td>
                            @Html.TextBox("HotenKH")
                            @ViewData["Loi1"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Tên đăng nhập:</td>
                        <td>
                            @Html.TextBox("TenDN")
                            @ViewData["Loi2"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Mật khẩu:</td>
                        <td>
                            @Html.Password("Matkhau")
                            @ViewData["Loi3"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Nhập lại mật khẩu:</td>
                        <td>
                            @Html.Password("Matkhaunhaplai")
                            @ViewData["Loi4"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Email:</td>
                        <td>
                            @Html.TextBox("email")
                            @ViewData["Loi5"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Địa chỉ:</td>
                        <td>
                            @Html.TextBox("Diachi")
                            @ViewData["Loi6"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Số điện thoại:</td>
                        <td>
                            @Html.TextBox("Dienthoai")
                            @ViewData["Loi7"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Ngày sinh:</td>
                        <td>
                            <input type="date" name="Ngaysinh" />
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td></td>
                        <td>
                            <input type="submit" value="Đăng Ký"
                        </td>
                    </tr>

                }

            }
        </table>
    </div>

</section>


