
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*@model TH_Project.ViewModel.ProductVM*@

<style>

    table {
        width: 500px;
        height: 250px;
        margin: auto;
        border-collapse: separate;
        border-spacing: 0 10px;
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        margin-top: 20px;
        text-align: center;
    }

    table td {
        padding: 8px;
        font-size: 20px;
        color: darkred;
        font-family: 'Times New Roman', Times, serif;
    }

    input[type="submit"] {
        width: 30%;
        background-color: #4899b7;
        color: #fff;
        font-size: 16px;
        padding: 5px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        input[type="submit"]:hover {
            background-color: #23946b;
        }

</style>




<section class="category_section layout_padding" style="display: flex;">
    <div class="container" style="text-align: center;">
        <table align="center">
            <h3 style="padding-top: 15px; text-align:center; color: darkred; font-weight: bold; font-family: 'Times New Roman', Times, serif;">ĐĂNG NHẬP</h3>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true){
                    <tr>
                        <td>Tên đăng nhập:</td>
                        <td>
                            @Html.TextBox("TenDN")
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="font-size:12px; color: red;">@ViewData["Loi1"]</td>
                    </tr>
                    <tr>
                        <td>Mật khẩu:</td>
                        <td>
                            @Html.TextBox("Matkhau")
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="font-size:12px; color: red;">@ViewData["Loi2"]</td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align:center">
                            <input type="submit" value="Đăng Nhập"
                        </td>
                    </tr>

                }

            }

        </table>
        <div style="padding-top: 20px;">
            <caption>Bạn chưa có tài khoản? </caption> @Html.ActionLink("Đăng Ký", "Dangky")
        </div>
    </div>

</section>



<h4 style="color:darkred; text-align:center">@ViewBag.Thongbao</h4>


